<%= form_with model: @post do |form| %>
    <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    </div>

    <div class="form-group">
    <%= form.label :content %><br>
    <%= form.text_area :content %>
    </div>

    <div class="form-group">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
    </div>

    <div class="form-actions">
    <%= form.submit %>
    </div>
<% end %>
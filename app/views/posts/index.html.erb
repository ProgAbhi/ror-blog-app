<h1 style="text-align: center">All Posts</h1>

<div class="post-cards-container">
<% @posts.each do |post| %>
  <div class="post-card">
  <h2><%= post.title %></h2>
  <% if post.image.attached? %>
  <%= image_tag url_for(post.image), alt:"Post image", class:"post-image" %>
  <% end %>
  <p><%= truncate(post.content, length: 100) %></p>
  <%= link_to "Read More", post_path(post), class:"btn" %>
  </div>
<% end %>
</div>
<!-- For total posts across site -->
<p>Total Posts: <%= Post.count %> posts</p>

<!-- for total posts by current user -->
<% if current_user %>
  <p>Your Posts: <%= current_user.posts.count %> posts</p>
<% end %>